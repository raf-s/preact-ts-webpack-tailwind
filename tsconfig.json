{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "~/components/*": ["src/components/*"],
      "~/containers/*": ["src/containers/*"],
      "~/hooks/*": ["src/hooks/*"],
      "~/contexts/*": ["src/contexts/*"],
      "~/graphql/*": ["src/graphql/*"],
      "~/assets/*": ["src/assets/*"],
      "~/lib/*": ["src/lib/*"],
      "~/types/*": ["types/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": true,
    "noImplicitAny": false,
  },
  "exclude": ["node_modules", "build"],
  "include": [
    "./src",
    "webpack.config.ts" ]
}