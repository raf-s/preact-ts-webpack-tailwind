{
  "name": "react-ts-webpack-bootstrap",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Raf Sz.",
  "license": "MIT",
  "scripts": {
    "start": "webpack-cli serve --mode=development --env development --open --hot",
    "build": "webpack --mode=production --env production --progress",
    "format:other": "yarn prettier --write \"{,!(generated)/**/}*.{json,gql,graphql,yaml,yml}\"",
    "format:code": "yarn prettier --write \"{,!(generated)/**/}*.{ts,tsx,js,jsx}\"",
    "fix:code": "yarn lint:code --fix",
    "fix:css": "yarn lint:css --fix",
    "fix": "yarn fix:code && yarn fix:css && yarn format:code && yarn format:other",
    "prettier": "prettier --ignore-path .gitignore",
    "lint:other": "yarn prettier --list-different \"{,!(generated)/**/}*.{json,gql,graphql,yaml,yml}\"",
    "lint:css": "stylelint \"{,!({generated,dist})/**/}*.{scss,css}\"",
    "lint:code": "eslint --max-warnings=0 --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
    "lint": "yarn lint:other && yarn lint:code && yarn lint:css"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "clsx": "^1.1.1",
    "preact": "^10.6.4"
  },
  "devDependencies": {
    "@types/node": "^17.0.0",
    "@types/webpack-dev-server": "^4.5.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.5.1",
    "eslint": "^8.5.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.4.5",
    "mini-css-extract-plugin": "^2.4.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "sass": "^1.45.0",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-config-twbs-bootstrap": "^3.0.0",
    "stylelint-scss": "^4.0.1",
    "terser-webpack-plugin": "^5.3.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0"
  }
}
